<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_nav_graph"
    app:startDestination="@id/settingsFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.actrabajoequipo.recipesapp.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_editUsernameFragment"
            app:destination="@id/editUsernameFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_editEmailFragment"
            app:destination="@id/editEmailFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_editPasswordFragment"
            app:destination="@id/editPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/editUsernameFragment"
        android:name="com.actrabajoequipo.recipesapp.ui.settings.EditUsernameFragment"
        android:label="fragment_edit_username"
        tools:layout="@layout/fragment_edit_username" >
        <action
            android:id="@+id/action_editUsernameFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@+id/settings_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/editEmailFragment"
        android:name="com.actrabajoequipo.recipesapp.ui.settings.EditEmailFragment"
        android:label="fragment_edit_email"
        tools:layout="@layout/fragment_edit_email" />
    <fragment
        android:id="@+id/editPasswordFragment"
        android:name="com.actrabajoequipo.recipesapp.ui.settings.EditPasswordFragment"
        android:label="fragment_edit_password"
        tools:layout="@layout/fragment_edit_password" >
        <action
            android:id="@+id/action_editPasswordFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@+id/settings_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>